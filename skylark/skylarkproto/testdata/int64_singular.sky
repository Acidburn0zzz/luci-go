m = testprotos.IntFields()

# Default value.
assert.eq(m.i64, 0)

# Setter and getter works.
m.i64 = 123
assert.eq(m.i64, 123)

# Setting through constructor works.
m2 = testprotos.IntFields(i64=456)
assert.eq(m2.i64, 456)

# Clearing works.
m2.i64 = None
assert.eq(m2.i64, 0)

# Setting too large value fails.
two_pow_63 = 9223372036854775808
m2.i64 = two_pow_63 - 1  # still ok
def set_large():
  m2.i64 = two_pow_63
assert.fails(set_large, "doesn't fit into int64")

# Setting wrong type fails.
def set_bad():
  m2.i64 = [1, 2, 3]
assert.fails(set_bad, 'can\'t assign list to a value of kind "int64"')

# Setting to a message fails.
def set_msg():
  m2.i64 = testprotos.IntFields()
assert.fails(set_msg, 'can\'t assign proto struct to a value of type "int64"')

# Serialization to text proto works.
text = proto.to_pbtext(testprotos.IntFields(i64=987))
assert.eq(text, "i64: 987\n")
